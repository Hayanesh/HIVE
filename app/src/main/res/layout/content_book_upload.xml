    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/linear_top"
        android:id="@+id/relativeLayout">
    <android.support.v7.widget.CardView
        android:visibility="visible"
        android:layout_weight="1.4"
        android:id="@+id/book_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/filmo_shadow"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="10dp"
        app:layout_anchorGravity="left|center_horizontal"
       >
        <ImageView
            android:id="@+id/pdfView"
            android:layout_width="75dip"
            android:layout_height="90dip"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/book1" />
    </android.support.v7.widget.CardView>

        <com.github.florent37.arclayout.ArcLayout
            android:id="@+id/upload_status"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:alpha="0.8"
            android:elevation="5dp"
            android:visibility="visible"
            app:arc_cropDirection="cropInside"
            app:arc_height="20dp"
            app:arc_position="left"
            app:layout_anchorGravity="left|center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bullet" />

            <RelativeLayout
                android:id="@+id/upload_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/upload_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Your book is uploading..." />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_file_upload_black_24dp"
                    app:fabSize="mini" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_toLeftOf="@id/floatingActionButton3"
                    android:max="100"
                    android:visibility="visible" />

            </RelativeLayout>
        </com.github.florent37.arclayout.ArcLayout>
    </RelativeLayout>


</RelativeLayout>
